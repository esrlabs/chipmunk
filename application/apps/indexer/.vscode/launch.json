    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'chip'",
            "cargo": {
                "args": ["build", "--bin=chip", "--package=chip"],
                "filter": {
                    "name": "chip",
                    "kind": "bin"
                }
            },
            "args": ["-s", "2", "${workspaceRoot}/test.txt", "tag"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'chip'",
            "cargo": {
                "args": ["test", "--no-run"],
                "filter": {
                    "name": "chip",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}

{
  "name": "logviewer",
  "version": "0.25.2",
  "description": "LogViewer",
  "main": "electron.js",
  "scripts": {
    "dist": "gulp",
    "postinstall": "electron-builder install-app-deps",
    "build": "./node_modules/.bin/build --mac",
    "publish": "./node_modules/.bin/build --mac -p always"
  },
  "keywords": [
    "logs",
    "logviewer"
  ],
  "author": "Dmitry Astafyev",
  "license": "MIT",
  "dependencies": {
    "electron-json-storage": "^4.1.1",
    "electron-updater": "^3.1.1",
    "glob": "^7.1.2",
    "serialport": "6.1.1",
    "telnet-client": "^0.15.5",
    "uuid": "3.2.1",
    "websocket": "1.0.25"
  },
  "devDependencies": {
    "electron": "^2.0.7",
    "electron-builder": "^20.27.1",
    "dmg-builder": "^5.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/esrlabs/logviewer.git"
  },
  "copyright": "Copyright © 2018 year E.S.R.Labs",
  "build": {
    "appId": "com.logviewer.de",
    "productName": "logviewer",
    "copyright": "Copyright © 2018 year E.S.R.Labs",
    "files": [
      {
        "from": "client/node_modules",
        "to": "client/node_modules",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "esrlabs",
        "repo": "logviewer"
      }
    ],
    "npmRebuild": true,
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "./build/mac/icon.icns",
      "target": [
        {
          "target": "dmg"
        },
        {
          "target": "zip"
        }
      ]
    }
  }
}
